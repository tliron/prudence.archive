//
// Prudence Component
//

import java.lang.Runtime
import java.util.concurrent.Executors
import org.restlet.Component
import com.threecrickets.prudence.util.DelegatedStatusService
import com.threecrickets.prudence.cache.InProcessMemoryCache

//
// Component
//

componentInstance = new Component()

componentInstance.context.attributes['prudence.version'] = prudenceVersion
componentInstance.context.attributes['prudence.revision'] = prudenceRevision
componentInstance.context.attributes['prudence.flavor'] = prudenceFlavor

//
// Logging
//

componentInstance.logService.loggerName = 'web-requests'

//
// StatusService
//

componentInstance.statusService = new DelegatedStatusService()

//
// Executor
//

executor = Executors.newFixedThreadPool(Runtime.runtime.availableProcessors())
componentInstance.context.attributes['prudence.executor'] = executor

//
// Cache
//

componentInstance.context.attributes['com.threecrickets.prudence.cache'] = new InProcessMemoryCache()
