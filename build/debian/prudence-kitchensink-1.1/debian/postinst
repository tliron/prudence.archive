#!/bin/sh
set -e

# summary of how this script can be called:
#		* <postinst> `configure' <most-recently-configured-version>
#		* <old-postinst> `abort-upgrade' <new version>
#		* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#		  <new-version>
#		* <postinst> `abort-remove'
#		* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#		  <failed-install-package> <version> `removing'
#		  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	configure)
		if ! id prudence-kitchensink > /dev/null 2>&1; then
			useradd -rU prudence-kitchensink
		fi
		
		mkdir -p /var/log/prudence-kitchensink
		mkdir -p /var/lib/prudence-kitchensink/cache
		
		chown -R prudence-kitchensink:prudence-kitchensink /var/lib/prudence-kitchensink
		chown -R prudence-kitchensink:prudence-kitchensink /var/log/prudence-kitchensink
		chown -R prudence-kitchensink:prudence-kitchensink /etc/prudence-kitchensink
		
		ln -fs  /usr/lib/prudence-kitchensink/bin/run.sh     /etc/init.d/prudence-kitchensink
		ln -fsT /var/lib/prudence-kitchensink/instance/      /usr/lib/prudence-kitchensink/instance
		ln -fsT /etc/prudence-kitchensink/                   /usr/lib/prudence-kitchensink/configuration
		ln -fsT /var/lib/prudence-kitchensink/applications/  /usr/lib/prudence-kitchensink/applications
		ln -fsT /var/lib/prudence-kitchensink/common/        /usr/lib/prudence-kitchensink/common
		ln -fsT /var/log/prudence-kitchensink/               /usr/lib/prudence-kitchensink/logs
		ln -fsT /var/lib/prudence-kitchensink/cache/         /usr/lib/prudence-kitchensink/cache
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
