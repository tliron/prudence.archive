#!/bin/sh
set -e

# summary of how this script can be called:
#		* <postinst> `configure' <most-recently-configured-version>
#		* <old-postinst> `abort-upgrade' <new version>
#		* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#		  <new-version>
#		* <postinst> `abort-remove'
#		* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#		  <failed-install-package> <version> `removing'
#		  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	configure)
		if ! id prudence-groovy > /dev/null 2>&1; then
			useradd -rU prudence-groovy
		fi
		
		mkdir -p /var/log/prudence-groovy
		mkdir -p /var/lib/prudence-groovy/cache
		
		chown -R prudence-groovy:prudence-groovy /var/lib/prudence-groovy
		chown -R prudence-groovy:prudence-groovy /var/log/prudence-groovy
		chown -R prudence-groovy:prudence-groovy /etc/prudence-groovy
		
		ln -fs  /usr/lib/prudence-groovy/bin/run.sh     /etc/init.d/prudence-groovy
		ln -fsT /var/lib/prudence-groovy/instance/      /usr/lib/prudence-groovy/instance
		ln -fsT /etc/prudence-groovy/                   /usr/lib/prudence-groovy/configuration
		ln -fsT /var/lib/prudence-groovy/applications/  /usr/lib/prudence-groovy/applications
		ln -fsT /var/log/prudence-groovy/               /usr/lib/prudence-groovy/logs
		ln -fsT /var/lib/prudence-groovy/cache/         /usr/lib/prudence-groovy/cache
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
