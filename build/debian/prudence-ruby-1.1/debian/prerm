#!/bin/sh
set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
		set +e
		if service prudence-ruby status > /dev/null 2>&1; then 
			service prudence-ruby stop
		fi
		set -e
		
		if id prudence-ruby > /dev/null 2>&1; then
			userdel -f prudence-ruby
		fi
		
		if grep -i "^prudence-ruby" /etc/group > /dev/null 2>&1; then
			groupdel prudence-ruby
		fi
	
		rm -f /etc/init.d/prudence-ruby
		rm -f /usr/lib/prudence-ruby/instance
		rm -f /usr/lib/prudence-ruby/configuration
		rm -f /usr/lib/prudence-ruby/applications
		rm -f /usr/lib/prudence-ruby/common
		rm -f /usr/lib/prudence-ruby/logs
		rm -f /usr/lib/prudence-ruby/cache
	;;
	
	*)
		    echo "postrm called with unknown argument \`$1'" >&2
		    exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
