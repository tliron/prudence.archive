#!/bin/sh
set -e

# summary of how this script can be called:
#		* <postinst> `configure' <most-recently-configured-version>
#		* <old-postinst> `abort-upgrade' <new version>
#		* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#		  <new-version>
#		* <postinst> `abort-remove'
#		* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#		  <failed-install-package> <version> `removing'
#		  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	configure)
		if ! id prudence-ruby > /dev/null 2>&1; then
			useradd -rU prudence-ruby
		fi
		
		mkdir -p /var/log/prudence-ruby
		mkdir -p /var/lib/prudence-ruby/cache
		
		chown -R prudence-ruby:prudence-ruby /var/lib/prudence-ruby
		chown -R prudence-ruby:prudence-ruby /var/log/prudence-ruby
		chown -R prudence-ruby:prudence-ruby /etc/prudence-ruby
		
		ln -fs  /usr/lib/prudence-ruby/bin/run.sh     /etc/init.d/prudence-ruby
		ln -fsT /var/lib/prudence-ruby/instance/      /usr/lib/prudence-ruby/instance
		ln -fsT /etc/prudence-ruby/                   /usr/lib/prudence-ruby/configuration
		ln -fsT /var/lib/prudence-ruby/applications/  /usr/lib/prudence-ruby/applications
		ln -fsT /var/lib/prudence-ruby/common/        /usr/lib/prudence-ruby/common
		ln -fsT /var/log/prudence-ruby/               /usr/lib/prudence-ruby/logs
		ln -fsT /var/lib/prudence-ruby/cache/         /usr/lib/prudence-ruby/cache
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
