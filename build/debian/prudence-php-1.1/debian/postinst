#!/bin/sh
set -e

# summary of how this script can be called:
#		* <postinst> `configure' <most-recently-configured-version>
#		* <old-postinst> `abort-upgrade' <new version>
#		* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#		  <new-version>
#		* <postinst> `abort-remove'
#		* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#		  <failed-install-package> <version> `removing'
#		  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	configure)
		if ! id prudence-php > /dev/null 2>&1; then
			useradd -rU prudence-php
		fi
		
		mkdir -p /var/log/prudence-php
		mkdir -p /var/lib/prudence-php/cache
		
		chown -R prudence-php:prudence-php /var/lib/prudence-php
		chown -R prudence-php:prudence-php /var/log/prudence-php
		chown -R prudence-php:prudence-php /etc/prudence-php
		
		ln -fs  /usr/lib/prudence-php/bin/run.sh     /etc/init.d/prudence-php
		ln -fsT /var/lib/prudence-php/instance/      /usr/lib/prudence-php/instance
		ln -fsT /etc/prudence-php/                   /usr/lib/prudence-php/configuration
		ln -fsT /var/lib/prudence-php/applications/  /usr/lib/prudence-php/applications
		ln -fsT /var/lib/prudence-php/common/        /usr/lib/prudence-php/common
		ln -fsT /var/log/prudence-php/               /usr/lib/prudence-php/logs
		ln -fsT /var/lib/prudence-php/cache/         /usr/lib/prudence-php/cache
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
