						<scope>system</scope>
						<systemPath>${java.home}/../lib/tools.jar</systemPath>
					</dependency>
				</dependencies>
			</plugin>
			-->

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>jar</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<!-- jar artifact -->
								<artifact>
									<type>jar</type>
									<file>../../cache/jars/${project.artifactId}.jar</file>
								</artifact>
								<!-- javadoc artifact -->
								<artifact>
									<type>javadoc</type>
									<file>../../cache/jars/javadoc.jar</file>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
					<execution>
						<id>sources</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<!-- sources artifact -->
								<artifact>
									<type>sources</type>
									<file>../../cache/jars/sources.jar</file>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
